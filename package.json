{
  "name": "reason-react-realworld-example-app",
  "version": "0.1.0",
  "scripts": {
    "build": "npm run re:build && npm run js:build",
    "format": "prettier --write \"**/*.{js,json,md,yml}\" \"!**/*.bs.js\" && find ./src -regex '.*\\.re' -exec bsrefmt --in-place '{}' \\;",
    "re:start": "npm run re:build -- -w",
    "js:build": "react-scripts build",
    "re:build": "bsb -make-world",
    "re:clean": "bsb -clean-world",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "keywords": [
    "BuckleScript",
    "ReasonReact",
    "reason-react"
  ],
  "author": "Jih-Chi Lee <achi@987.tw>",
  "license": "MIT",
  "dependencies": {
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "reason-react": ">=0.7.0"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "^0.4.9",
    "bs-platform": "^7.0.1",
    "bs-react-testing-library": "^0.6.0",
    "bs-webapi": "^0.15.6",
    "prettier": "^1.19.1",
    "react-scripts": "^3.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
