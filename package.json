{
  "name": "real-world",
  "version": "0.0.1",
  "description": "An API for publishing and reading articles.",
  "author": "Vin√≠cius Vargas",
  "private": false,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start:prod": "node dist/main/server",
    "start": "NODE_ENV=development nest start",
    "start:dev": "NODE_ENV=development nest start",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write .",
    "test:unit": "jest --testRegex .*\\.unit\\.ts$",
    "test:acceptance": "jest --testRegex .*\\.acceptance\\.ts$",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.2.1",
    "aws-lambda": "^1.0.7",
    "aws-serverless-express": "^3.4.0",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.5.2",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "0.3.6",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.19",
    "@nestjs/cli": "^8.2.4",
    "@nestjs/schematics": "^8.0.0",
    "@types/aws-lambda": "^8.10.100",
    "@types/aws-serverless-express": "^3.3.5",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^16.11.10",
    "@types/passport-http": "^0.3.9",
    "@types/passport-jwt": "^3.0.6",
    "axios": "^0.26.1",
    "jest": "^27.5.1",
    "lorem-ipsum": "^2.0.4",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "source-map-support": "^0.5.20",
    "sqlite3": "^5.0.3",
    "swagger-ui-express": "^4.3.0",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.3",
    "ts-node": "10.7.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "4.5.2"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testRegex": ".*\\.(unit|spec|acceptance)\\.ts$",
    "collectCoverageFrom": [
      "main/*.(t|j)s"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage"
  }
}
