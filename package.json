{
  "name": "reason-react-realworld-example-app",
  "version": "0.1.0",
  "scripts": {
		"build": "npm run bsb:build && react-scripts build",
		"format": "prettier --write **/*.json **/*.md && find ./src -regex '.*\\.re' -exec bsrefmt --in-place '{}' \\;",
    "bsb:build": "bsb -make-world",
    "bsb:clean": "bsb -clean-world",
    "bsb:start": "bsb -make-world -w -ws _ ",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "keywords": [
    "BuckleScript",
    "ReasonReact",
    "reason-react"
  ],
  "author": "Jih-Chi Lee <achi@987.tw>",
  "license": "MIT",
  "dependencies": {
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "reason-react": ">=0.7.0"
  },
  "devDependencies": {
    "bs-platform": "^6.2.1",
    "prettier": "^1.19.1",
    "react-scripts": "^3.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
