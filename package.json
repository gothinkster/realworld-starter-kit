{
  "name": "reason-react-realworld-example-app",
  "version": "0.1.0",
  "author": "Jihchi Lee <achi@987.tw>",
  "license": "MIT",
  "keywords": [
    "ReScript",
    "BuckleScript",
    "reason-react",
    "ReasonML",
    "react"
  ],
  "scripts": {
    "build": "snowpack build",
    "build:res": "bsb -make-world",
    "clean": "npm run clean:res",
    "clean:res": "bsb -clean-world",
    "format": "prettier --write \"**/*.{js,json,md,yml}\" && find -E ./src -regex \".*\\.resi?\" -exec bsc -format '{}' \\;",
    "start": "snowpack dev",
    "test": "web-test-runner \"src/**/__tests__/*.bs.js\"",
    "test:coverage": "npm test -- --coverage"
  },
  "dependencies": {
    "@rescript/react": "^0.10.1",
    "dompurify": "^2.2.3",
    "marked": "^2.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.0.5",
    "@snowpack/plugin-react-refresh": "^2.4.0",
    "@snowpack/plugin-run-script": "^2.3.0",
    "@snowpack/web-test-runner-plugin": "^0.2.1",
    "@testing-library/react": "^11.2.5",
    "@web/test-runner": "^0.12.15",
    "bs-bastet": "^1.2.5",
    "bs-decode": "^0.11.2",
    "bs-fetch": "^0.6.2",
    "bs-platform": "^9.0.1",
    "bs-webapi": "^0.19.1",
    "chai": "^4.3.0",
    "prettier": "^2.2.1",
    "relude": "^0.65.0",
    "snowpack": "^3.0.11"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "src/**/*.bs.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
